syntax = "v1"

info (
	title:   "Arbitrage Engine API"
	desc:    "套利引擎服务"
	author:  "yangyangyang"
	version: "v1.0"
)

type (
	// HealthCheckResponse 健康检查响应
	HealthCheckResponse {
		Status  string `json:"status"`
		Uptime  int64  `json:"uptime"`
		Version string `json:"version"`
	}
)

@server (
	prefix: /api
)
service engine-api {
	@doc "健康检查"
	@handler healthCheck
	get /health (HealthCheckResponse)
}

